                <ion-icon class="icon-nav" name="menu"></ion-icon>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <% if(user){%>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link hvr-shutter-out-vertical" aria-current="page" href="/"><ion-icon
