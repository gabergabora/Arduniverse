    <script>
        function nameCounterDown() {
            var num = document.getElementById("nameCounter")
            var name = document.getElementById("nameInput")
            fixer = 30 - name.value.length;
            num.innerText = fixer

            if (fixer < 0) {
                num.style.color = "red";
            } else {
                num.style.color = "black";
            }
        }

        
    </script>

