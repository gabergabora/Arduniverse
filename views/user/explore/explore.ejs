<div class="explore">
    <% getUsers.forEach( data => {%>
        <div class="user-card" onclick="window.location.href='/profile/get/<%= data.username%>'">
            <% if(data.profileImage == 'none'){%>
                <img src="/images/none.png" alt="image">
            <%} else {%>
