<%- include("../../layout/navbar") -%>

<div class="profile">
        <div class="des-page">
            <div class="info container">
                <% if(user.profileImage == "none"){%>
                    <img src="/images/none.png" alt="" class="icon">
                <%} else {%>
                    <img src="/upload/images/<%= user.profileImage%>" alt="" class="icon">
                <%} %>
                <div class="status">
                    <div class="under">
                        <p class="num"><%= user.posts.length%></p>
                        <p>Posts</p>
                    </div>
                    <div class="under" onclick="window.location.href='/system/followers/<%= user.username%>'">
                        <p class="num"><%= user.followers.length%></p>
                        <p>Followers</p>
                    </div>
                    <div class="under" onclick="window.location.href='/system/following/<%= user.username%>'">
                        <p class="num"><%= user.following.length%></p>
                        <p>Following</p>
                    </div>
        
                </div>
                <div class="about">
                    <p class="username"><%= user.username %></p>
                    <p class="name"><%= user.name %></p>
                    <p class="bio"><%= user.bio %></p>
                </div>
            </div>
            <br>
        </div>
        <div class="contorls">
            <a class="btn"  href="/profile">Posts</a>
            <a class="btn" href="/profile/orders">Orders</a>
            <a class="btn"  href="/profile/edit/<%= user.id%>">Edit Profile</a>
        </div>

        <% if(type == "posts"){%>
            <div class="profile-posts conatiner">
                <% projects.forEach(data => {%>
                    <div class="card text-black" onclick="window.location.href='/projects/get/<%= data.id%>'">
                        <img class="card-img" src="/upload/images/<%= data.projectImage%>" alt="Card image">
                        <div class="status">
                            <p class="likes"><ion-icon class="icon" name="heart"></ion-icon> <%= data.likes.length%></p>
                        </div>
                        <div class="card-img-overlay">
                          <h5 class="card-title"><%= data.title%></h5>
                          <p class="card-text card-des"><%= data.des%></p>
                          <p class="card-text"><%= data.Date%></p>
                        </div>
                      </div>
                <%}) %>
                <br>
            </div>
            <br>
        <%} %>
</div>

<%- include("../../layout/footer") -%>